@model EndaMcCormack.Models.PortfolioPost

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section PortfolioEditCss
{
    <link rel="stylesheet" type="text/css" href="@Href("~/Content/css/contact.css")" />
}

<h2>Edit</h2>
<div id="formDiv">
    <form action="@Href("~/Portfolio/Update")" method="post" id="postForm">
        @if (Model.ID != -1)
        {
            <input type="hidden" name="ID" value="@Model.ID" />
        }

        @{DateTime dateTime = Model.DateTime.Year >2000 ? Model.DateTime : DateTime.Now;}

        <input type="text" name="ProjTypeID"  value="@Model.ProjTypeID"/> Project type [1. soft 2. web 3. design 4. others] <br />
        <input type="text" name="DateTime" value="@dateTime" /> Date <br />
        <input type="text" name="Title" value="@Model.Title" /> Title <br />
        <input type="text" name="Tags" value="@ViewBag.Tags" /> Tags <br />
        <input type="text" name="Files" value="@ViewBag.Files" /> Files names <br />
        <input type="text" name="FilesURL" value="@ViewBag.Files" /> Files URL <br />
        <input type="text" name="Links" value="@ViewBag.Links" /> Links name <br />
        <input type="text" name="LinksURL" value="@ViewBag.Links" /> Links URL <br />
        <textarea name="Body" cols="40" rows="10" >@Model.Body</textarea>
        <input type="submit" name="submit" value="Submit" />

    </form>
</div>