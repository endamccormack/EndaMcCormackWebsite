	<script type="text/javascript">


	    $(document).ready(function () {
	        $('.itemContents').hide();

	        $('.item').click(function (e) {
	            var id = e.target.id.replace("Header", "Demo")
	            var vis = $('#' + id).is(":visible")
	            $('.itemContents').hide('slow');
	            $('.item').animate({ "color": "#000000" });
	            $('#' + e.target.id).animate({ "color": "#007FFF" });
	            $('.item').css({ "font-weight": "100" });
	            $('#' + e.target.id).css({ "font-weight": "bold" });
	            $('.itemContents').css({ "color": "#000" });

	            if (vis) {
	                $('#' + e.target.id).animate({ "color": "#000" });
	                $('#' + e.target.id).css({ "font-weight": "100" });
	                $('#' + id).show();
	            }
	            else {
	                $('#' + id).toggle('slow');
	            }
	        });
	    });
	</script>

